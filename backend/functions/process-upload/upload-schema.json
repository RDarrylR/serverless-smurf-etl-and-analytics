{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Store Transaction Schema",
  "description": "Schema for validating uploaded JSON files containing store transaction records. Filename must match pattern: store_XXXX_YYYY-MM-DD.json",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": [
      "transaction_id",
      "transaction_timestamp",
      "item_sku",
      "item_name",
      "quantity",
      "unit_price",
      "line_total",
      "discount_amount",
      "payment_method",
      "customer_id"
    ],
    "properties": {
      "transaction_id": {
        "type": "string",
        "description": "Unique identifier for the transaction",
        "minLength": 1
      },
      "transaction_timestamp": {
        "type": "string",
        "description": "ISO 8601 timestamp of the transaction",
        "format": "date-time"
      },
      "item_sku": {
        "type": "string",
        "description": "Stock keeping unit identifier"
      },
      "item_name": {
        "type": "string",
        "description": "Name of the item"
      },
      "quantity": {
        "type": "integer",
        "description": "Quantity of items purchased",
        "minimum": 1
      },
      "unit_price": {
        "type": "number",
        "description": "Price per unit (decimal with 2 decimal places)"
      },
      "line_total": {
        "type": "number",
        "description": "Total for the line item (decimal with 2 decimal places)"
      },
      "discount_amount": {
        "type": "number",
        "description": "Discount applied (decimal with 2 decimal places)",
        "minimum": 0
      },
      "payment_method": {
        "type": "string",
        "description": "Payment method used",
        "enum": ["cash", "credit", "debit", "gift_card", "mobile"]
      },
      "customer_id": {
        "type": "string",
        "description": "Customer identifier"
      }
    },
    "additionalProperties": false
  }
}
